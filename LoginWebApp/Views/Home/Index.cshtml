@{
    ViewData["Title"] = "Home Page";
}



<div class="text-center">
    <h1 class="display-4">@ViewContext.HttpContext.User.Claims.FirstOrDefault(claim => claim.Type == "dateNow")?.Value</h1>
    @{
        if (!ViewContext.HttpContext.User.Identity.IsAuthenticated)
        {
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Войти в кабинет</a>
        }
        else
            {
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Выйти</a>
            }
    }
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
